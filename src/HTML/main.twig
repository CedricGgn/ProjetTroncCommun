
{% extends "base.html" %}

{% block head %}
        {{ parent() }}
        <link rel="stylesheet" type="text/css" href="../CSS/main.css" />
        <link href="https://fonts.googleapis.com/css?family=Raleway:400,300,600,800,900" rel="stylesheet" type="text/css">
{% endblock %}

{% block header %}

{{ parent() }}

{% if session.username is defined %}
    <div id="user-info" data-username="{{ session.username }}"></div>

    <div class = "Accueil">
        <div id = "connected">
            <strong>{{ session.username }}</strong>
            <span id ="seperator">|</span>
            <a href="/logout" id="'logout">Déconnexion</a>
        </div>
    </div>  
{% else %}
    <div class ="Accueil">
        <a href="/login">Connexion</a>
    </div>
{% endif %}

{% endblock %}

{% block content %}
    <div class="dashboard">
        <div class="data-container">
            <div class="data">
                <div class="left">
                    <img src="../IMAGE/battery_w.png" alt="">
                </div>
                <div class="right">
                    <h1>{{ battery }} %</h1>
                </div>
                
            </div>
            <div class="data">
                <div class="left">
                    <img src="../IMAGE/brightness.png" alt="">
                </div>
                <div class="right">
                    <h1>{{ brightness }} lux</h1>
                </div>
                
            </div>
            <div class="data">
                
            </div>
        </div>
         <div class="map-container">
            <img src="" alt="cartographie de la zone">
        </div>
    </div>
    <div class="dashboard">
      
        <div class="camera">
            <video controls >
            </video>
        </div>
        <div class="controler-container">
            <div class="log">
                <table id="keyPressTable">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Direction</th>
                        </tr>
                    </thead>
                    <tbody>
                      
                        
                    </tbody>
                </table>
            </div>
            <div class="mode">
                <button class="mode-button"><p>Auto</p></button> <!-- Flèche vers la gauche -->
                <button class="mode-button"><p>Manuelle</p></button> <!-- Flèche vers le bas -->
                <button class="mode-button"><p>Semi</p></button>
            </div>
            <div class="controler" id="controler">
                <div class="up-arrow-container">
                    <button class="control-button" data-keyboard-key="ArrowUp">&#8593;</button> <!-- Flèche vers le haut -->
                </div>
                <div class="another-arrow-container">
                    <button class="control-button" data-keyboard-key="ArrowLeft">&#8592;</button> <!-- Flèche vers la gauche -->
                    <button class="control-button" data-keyboard-key="ArrowDown">&#8595;</button> <!-- Flèche vers le bas -->
                    <button class="control-button" data-keyboard-key="ArrowRight">&#8594;</button> <!-- Flèche vers la droite -->
                </div>
               
            </div>
        </div>
    </div>
    <div class="dashboard">
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Objet</th>
                    <th>Rencontre</th>
                </tr>
            </thead>
            <tbody>
               
               
                <!-- Autres lignes de la table seront ajoutées ici dynamiquement -->
            </tbody>
        </table>
    </div>
{% endblock %}

{% block script %}
        <script src="../JS/main.js"></script>

{% endblock %}

